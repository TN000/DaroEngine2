{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "LogPath": "logs/middleware-dev-.log"
  },
  "AllowedHosts": "localhost;127.0.0.1;::1",
  "Database": {
    "Path": "graphics_middleware_dev.db"
  },
  "Templates": {
    "Path": "%USERPROFILE%\\Documents\\DaroEngine\\Templates",
    "CacheDurationSeconds": 10
  },
  "Scenes": {
    "Path": "%USERPROFILE%\\Documents\\DaroEngine\\Scenes"
  },
  "MosartClient": {
    "Host": "127.0.0.1",
    "Port": 5555,
    "CommandTimeoutMs": 2000,
    "ConnectTimeoutMs": 2000,
    "MaxRetryAttempts": 3,
    "BaseRetryDelayMs": 100
  },
  "Mosart": {
    "Port": 5555
  },
  "State": {
    "ExpirationMinutes": 15
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://127.0.0.1:3000",
      "http://localhost:5173",
      "http://127.0.0.1:5173",
      "http://localhost:5000",
      "http://127.0.0.1:5000"
    ]
  }
}
