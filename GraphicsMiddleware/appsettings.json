{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "LogPath": "logs/middleware-.log"
  },
  "AllowedHosts": "localhost;127.0.0.1;::1",
  "Database": {
    "Path": "graphics_middleware.db"
  },
  "Templates": {
    "Path": "%USERPROFILE%\\Documents\\DaroEngine\\Templates",
    "CacheDurationSeconds": 30
  },
  "Mosart": {
    "Port": 5555
  },
  "MosartClient": {
    "Host": "127.0.0.1",
    "Port": 5555,
    "CommandTimeoutMs": 1000,
    "ConnectTimeoutMs": 1000,
    "MaxRetryAttempts": 3,
    "BaseRetryDelayMs": 100
  },
  "State": {
    "ExpirationMinutes": 30
  },
  "Cors": {
    "AllowedOrigins": [
      "https://octopus.example.com",
      "https://nrcs.example.com"
    ]
  }
}
