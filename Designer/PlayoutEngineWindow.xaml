<!-- Designer/PlayoutEngineWindow.xaml -->
<Window x:Class="DaroDesigner.PlayoutEngineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DARO ENGINE"
        Height="720" Width="1280"
        MinHeight="400" MinWidth="600"
        Background="#FF000000"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Closing="Window_Closing">

    <Grid>
        <!-- ENGINE PREVIEW - Full window, pure render output -->
        <Viewbox Stretch="Uniform">
            <Border Width="1920" Height="1080" Background="#FF000000">
                <Image x:Name="EnginePreview" Stretch="Fill"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Border>
        </Viewbox>

        <!-- Subtle resize grip indicator -->
        <Path Data="M0,12 L12,0 M4,12 L12,4 M8,12 L12,8"
              Stroke="#33FFFFFF" StrokeThickness="1"
              HorizontalAlignment="Right" VerticalAlignment="Bottom"
              Margin="0,0,4,4"/>
    </Grid>
</Window>
